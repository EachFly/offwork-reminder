{
    "manifest_version": 3,
    "name": "加班提醒助手",
    "version": "1.0.0",
    "description": "提醒你已经加班多久了，别忘了回家！",
    "permissions": [
        "notifications",
        "alarms",
        "storage",
        "idle"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}